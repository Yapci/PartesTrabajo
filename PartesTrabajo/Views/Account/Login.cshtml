
@model PartesTrabajo.Models.newlogin

@{
    ViewBag.Title = "Log in";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="http://netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/css/bootstrap-combined.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  <link rel="stylesheet" href="/resources/demos/style.css">

<div class="container" style="margin-top:10%;  width:auto; margin-left:40%">
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div>
            <h2 style="width:auto;">Partes diarios</h2>
            <ol>
            <li>
                <h5 style="color:#005dcc">Usuario</h5>
                @Html.TextBoxFor(m => m.username)
            </li>
            <li>
                <h5 style="color:#005dcc">Password</h5>
                @Html.PasswordFor(m => m.password)
            </li>
            <li>
                <h5 style="color:#005dcc">Fecha</h5>
                @Html.TextBoxFor(m => m.fecha, new { id = "date" })
            </li>
        </ol>
        <input type="submit" value="Log in" class="btn btn-lg btn-primary btn-block" style="width:270px"/>
    </div>

}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#date").datepicker({ dateFormat: 'dd/mm/yy' });
    });
</script>

